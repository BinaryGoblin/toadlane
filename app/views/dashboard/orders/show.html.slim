= render '/shared/tabs'

.wrap-sm
  .pull-right
    = link_to "Close", dashboard_orders_path, class: "btn btn-success back-to-order-btn"
  .table-options
    table width="100%"
    table.table
      th
      tr
        td
          = render partial: '/shared/invoice', :locals => {:order => @order}

          .pull-right
            = link_to "Print Invoice", print_invoice_path(@order, :type => params['type']), class: "btn btn-success"

.footer-actions: .fa-container: .wrap-sm
